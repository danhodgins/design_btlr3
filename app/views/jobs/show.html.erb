	<% @job.notes.each do |note| %>
	  <tr>
		<td><%= note.body %></td>
		<td><%= time_ago_in_words(note.created_at) %> ago</td>
		<td><%= note.created_at.strftime('%m/%d/%Y') %></td>
		<td><%= link_to "edit", edit_note_path(note) %></td>
		<% end %>
    </tr>
  </thead>
</table>

